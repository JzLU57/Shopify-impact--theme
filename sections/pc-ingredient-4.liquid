    margin-top: 12px;
    text-align: center;
    font-size: {{ item_title_size_mobile }}px;
    color: {{ item_title_color}};
    line-height: 130%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
    font-weight: {{ item_title_weight }};
  }

  .ingredients-item-text-pc-{{ section.id }} {
