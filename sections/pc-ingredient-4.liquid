<style data-shopify="">
  .section-pc-{{ section.id }} {
    border-top: solid #000000 0px;
    border-bottom: solid #000000 0px;
    margin-top: {{ layout_margin_top }}px;
    margin-bottom: {{ layout_margin_bottom }}px;
    margin-left: 0rem;
    margin-right: 0rem;
    border-radius: 0px;
    overflow: hidden;
  }

  .section-pc-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: 27px;
    padding-bottom: 27px;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .ingredients-content-pc-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ingredients-heading-pc-{{ section.id }} {
    text-align: center;
    width: 100%;
  }

  .ingredients-heading-pc-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: 130%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
    font-weight: {{ heading_weight }};
  }

  .ingredients-text-pc-{{ section.id }} {
    margin-top: 12px;
    text-align: center;
    width: 100%;
  }

  .ingredients-text-pc-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: 150%;
    text-transform: unset;
    text-decoration: none;
    word-break: break-word;
  }

  .ingredients-layout-pc-{{ section.id }} {
    margin-top: 32px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .ingredients-image-pc-{{ section.id }} {
    display: none;
    border-radius: {{ main_image_border_radius }}%;
    border: {{ main_image_border_size }}px {{ main_image_border_style }} {{ main_image_border_color }};
    overflow: hidden;
    aspect-ratio: 1/1;
  }

  .ingredients-image-pc-{{ section.id }} img,
  .ingredients-image-pc-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ingredients-image-pc-{{ section.id }} svg {
    background-color: #afafaf;
  }

  .ingredients-column-pc-{{ section.id }} {
    display: flex;
    flex-direction: row;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .ingredients-item-pc-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 140px;
    flex-shrink: 0;
  }

  .ingredients-item-image-pc-{{ section.id }} {
    width: 90px;
    height: 90px;
    border-radius: {{ item_image_border_radius }}px;
    border: {{ item_image_border_size }}px {{ item_image_border_style }} {{ item_image_border_color }};
    overflow: hidden;
  }

  .ingredients-item-image-pc-{{ section.id }} img,
