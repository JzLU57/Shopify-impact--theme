  %}
  <style>
  
  
    .section-pc-{{section.id}} {
      margin-top: {{ layout_margin_top }}px;
      margin-bottom: {{ layout_margin_bottom }}px;
      border-top: solid {{ layout_border_width }}px {{ layout_border_style }} {{ layout_border_color }};
      border-bottom: solid {{ layout_border_width }}px {{ layout_border_style }} {{ layout_border_color }};
      
    }
  
    .section-pc-{{section.id}}-settings {
      margin: 0 auto;
      padding-top: 48px;
      padding-bottom: 48px;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  
    .steps-heading-pc-{{section.id}} {
      text-align: center;
    }
  
    .steps-heading-pc-{{section.id}} * {
      margin: 0;
      font-size: {{ heading_size_mobile }}px;
      color: {{ heading_color }};
      font-weight: {{ heading_weight }};
      line-height: 130%;
      text-transform: unset;
    }
  
    .steps-body-pc-{{section.id}} {
      display: grid;
      margin-top: 16px;
      position: relative;
    }
  
    .steps-item-pc-{{section.id}} {
      position: relative;
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 24px;
      overflow: hidden;
      padding: 26px 0px;
    }
  
    .steps-item-pc-{{section.id}}:after {
      content: '';
      position: absolute;
      background-color: {{ num_border_color }};
      z-index: 1;
      height: 100%;
      width: 2px;
      top: 0;
      left: 25.0px;
    }
  
    .steps-item-pc-{{section.id}}:first-child:after {
      top: 50%;
    }
  
    .steps-item-pc-{{section.id}}:last-child:after {
      height: 50%;
    }
  
    .steps-row-pc-{{section.id}} {
      display: flex;
      flex-direction: column;
    }
  
    .steps-number-pc-{{section.id}} {
      flex: 0 0 52px;
      height: 52px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      border-radius: {{ num_border_radius }}%;
      border: {{ num_border_width }}px {{ num_border_style }} {{ num_border_color }};
      {% comment %} border: 2px solid #333; {% endcomment %}
      margin: 0;
      font-weight: {{ num_weight }};
      font-size: {{  num_size_mobile }}px;
      color: {{ num_color  }};
      line-height: 100%;
      text-transform: unset;
      background-color: {{  num_bg_color }};
      position: relative;
      z-index: 2;
    }
  
    .steps-title-pc-{{section.id}} {
      margin: 0;
      margin-top: 0px;
      font-size: {{  title_size_mobile }}px;
      color: {{ title_color }};
      line-height: 100%;
      text-transform: unset;
      font-weight: {{ title_weight }};
    }
  
    .steps-text-pc-{{section.id}} {
      margin: 0;
      margin-top: 8px;
      font-size: {{ text_size_mobile }}px;
      color: {{ text_color }};
      font-weight: {{ text_weight }};
      line-height: 130%;
      text-transform: unset;
    }
  
    @media(min-width: 1024px) {
  
      {% comment %} .section-pc-{{section.id}} {
        margin-top: 0px;
        margin-bottom: 0px;
      } {% endcomment %}
  
      .section-pc-{{section.id}}-settings {
        padding: 0 5rem;
        padding-top: 64px;
        padding-bottom: 64px;
        padding-left: 5rem;
        padding-right: 5rem;
      }
  
      .steps-heading-pc-{{section.id}} {
        text-align: center;
      }
  
      .steps-heading-pc-{{section.id}} * {
        font-size: {{  heading_size }}px;
      }
  
      .steps-body-pc-{{section.id}} {
        grid-template-columns: repeat(3, 1fr);
        margin-top: 40px;
      }
  
      .steps-item-pc-{{section.id}} {
        padding: 0px 20px;
        gap: 0px;
        flex-direction: column;
        align-items: center;
      }
  
      .steps-item-pc-{{section.id}}:first-child {
        padding-left: 0px;
      }
  
      .steps-item-pc-{{section.id}}:last-child {
        padding-right: 0px;
      }
  
      .steps-row-pc-{{section.id}} {
        align-items: center;
      }
  
      .steps-number-pc-{{section.id}} {
        width: 96px;
        flex: 0 0 96px;
        font-size: {{ num_size }}px;
      }
  
      .steps-title-pc-{{section.id}} {
        max-width: 320px;
        margin-top: 32px;
        font-size: {{ title_size  }}px;
        text-align: center;
      }
  
      .steps-text-pc-{{section.id}} {
        max-width: 320px;
        margin-top: 16px;
        text-align: center;
        font-size: {{ text_size }}px;
      }
  
    }
  </style>
