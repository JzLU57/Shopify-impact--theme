{% liquid
    assign heading = section.settings.heading
    assign heading_size = section.settings.heading_size
    assign heading_weight = section.settings.heading_weight
      assign heading_color = section.settings.heading_color
      assign heading_size_mobile = section.settings.heading_size_mobile
  
      assign num_size = section.settings.num_size
      assign num_weight = section.settings.num_weight
      assign num_color = section.settings.num_color
      assign num_size_mobile = section.settings.num_size_mobile
      assign num_border_radius = section.settings.num_border_radius
      assign num_border_width = section.settings.num_border_width
      assign num_border_style = section.settings.num_border_style
      assign num_border_color = section.settings.num_border_color
      assign num_bg_color = section.settings.num_bg_color
  
      assign title_size = section.settings.title_size
      assign title_weight = section.settings.title_weight
      assign title_color = section.settings.title_color
      assign title_size_mobile = section.settings.title_size_mobile
  
      assign text_size = section.settings.text_size
      assign text_weight = section.settings.text_weight
      assign text_color = section.settings.text_color
      assign text_size_mobile = section.settings.text_size_mobile
  
      assign layout_margin_top = section.settings.layout_margin_top
      assign layout_margin_bottom = section.settings.layout_margin_bottom
