  <style>
  
    @media(min-width: 1024px) {
      .steps-item-pc-{{section.id}}:after {
        left: 0 !important;
        top: 47.0px !important;
        width: 100% !important;
        height: 2px !important;
      }
  
      .steps-item-pc-{{section.id}}:first-child:after {
        left: 50% !important;
        top: 47.0px !important;
      }
  
      .steps-item-pc-{{section.id}}:last-child:after {
        width: 50% !important;
        height: 2px !important;
      }
    }
  </style>
  
  <div class="section-pc-{{section.id}} steps-pc-{{section.id}}" style="background-color: {{  layout_background }}; background-image: ;">
    <div class="section-pc-{{section.id}}-settings">
      {% if heading != blank %}
      <div class="steps-heading-pc-{{section.id}}">
        <h2>{{ heading }}</h2>
      </div>
  {% endif %}
  
      <div class="steps-body-pc-{{section.id}}">
          {% for block in section.blocks %}
        <div class="steps-item-pc-{{section.id}}">
          <div class="steps-number-pc-{{section.id}}">{{ forloop.index }}</div>
  
          <div class="steps-row-pc-{{section.id}}">
            <p class="steps-title-pc-{{section.id}}">{{ block.settings.title }}</p>
  
            <p class="steps-text-pc-{{section.id}}">
              {{ block.settings.text }}
            </p>
          </div>
        </div>
  
      {% endfor %}
      </div>
    </div>
  </div>
