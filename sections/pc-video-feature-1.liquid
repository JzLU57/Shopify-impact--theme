{% liquid
  assign heading = section.settings.heading
  assign heading_size = section.settings.heading_size
  assign heading_size_mobile = section.settings.heading_size_mobile
  assign heading_weight = section.settings.heading_weight
  assign heading_color = section.settings.heading_color

  assign sub_heading = section.settings.sub_heading
  assign sub_heading_size = section.settings.sub_heading_size
  assign sub_heading_size_mobile = section.settings.sub_heading_size_mobile
  assign sub_heading_weight = section.settings.sub_heading_weight
  assign sub_heading_color = section.settings.sub_heading_color

  assign feat_text_size = section.settings.feat_text_size
  assign feat_text_size_mobile = section.settings.feat_text_size_mobile
  assign feat_text_weight = section.settings.feat_text_weight
  assign feat_text_color = section.settings.feat_text_color

  assign video = section.settings.video
  assign video_radius = section.settings.video_radius
  assign video_border_w = section.settings.video_border_w
  assign video_border_color = section.settings.video_border_color

  assign full_width = section.settings.full_width
  assign section_mt = section.settings.section_mt
  assign section_mb = section.settings.section_mb
  assign full_border = section.settings.full_border
  assign section_radius = section.settings.section_radius
  assign section_border_w = section.settings.section_border_w
  assign section_border_color = section.settings.section_border_color
  assign section_bg = section.settings.section_bg
%}

<style>
  .section-pc-{{section.id}} {
      max-width: {% if full_width %} 100% {% else %} 1200px {% endif %};
      {% if full_border %}
      border: {{section_border_w}}px solid {{section_border_color}};
      {% endif %}
      border-radius: {{section_radius}}px;
      margin: 0 auto;
      margin-top: {{section_mt}}px !important;
      margin-bottom: {{section_mb}}px !important;
      overflow: hidden;
      position: relative;
      background-color:{{section_bg}};
  }

  .section-pc-{{section.id}}-settings {
      margin: 0 auto;
      padding-top: 39px;
      padding-bottom: 39px;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
  }

  .video-text-body-pc-{{section.id}} {
      display: grid;
      grid-template-columns: 1fr;
      gap: 28px;
  }

  .video-text-content-pc-{{section.id}} {
      display: flex;
      flex-direction: column;
      align-items: center;
      overflow: hidden;
  }

  .video-text-video-pc-{{section.id}} {
      position: relative;
      overflow: hidden;
      border-radius: {{ video_radius }}px;
      border: {{ video_border_w }}px solid {{ video_border_color }};
  }

  .video-text-video-pc-{{section.id}} video,
  .video-text-video-pc-{{section.id}} iframe {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      border: 0px;
  }

  .video-text-video-pc-{{section.id}} .video{
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      border: 0px;
  }

  .video-text-buttons-pc-{{section.id}} {
      display: flex;
      align-items: center;
      margin-top: 30px;
      gap: 12px;
      flex-wrap: wrap;
      justify-content: center;
  }

  .video-text-features-pc-{{section.id}} {
      display: flex;
      margin-top: 30px;
      gap: 0px;
      flex-wrap: wrap;
      justify-content: center;
  }

  .video-text-feature-item-pc-{{section.id}} {
      display: flex;
      align-items: center;
      flex-direction: column;
  }

  .video-text-feature-icon-pc-{{section.id}} {
      max-width: 30px;
  }

  .video-text-feature-icon-pc-{{section.id}} img,
  .video-text-feature-icon-pc-{{section.id}} svg {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
  }

  .video-text-feature-icon-pc-{{section.id}} .img{
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
  }

  .video-text-feature-icon-pc-{{section.id}} svg path {
      fill: #121212;
  }

  .video-text-feature-heading-pc-{{section.id}} {
      text-align: center;
      margin-top: 12px;
      max-width: 84px;
  }

  .video-text-feature-heading-pc-{{section.id}} * {
      margin: 0;
      font-size: {{ feat_text_size_mobile }}px;
      color: {{feat_text_color}};
      line-height: 150%;
      text-transform: unset;
      word-wrap: break-word;
      word-break: break-word;
  }

  @media(min-width: 1024px) {

      .section-pc-{{section.id}}-settings {
          padding: 0 5rem;
          padding-top: 52px;
          padding-bottom: 52px;
          padding-left: 5rem;
          padding-right: 5rem;
      }

      .video-text-body-pc-{{section.id}} {
          gap: 80px;
          grid-template-columns: 1fr 1fr;
      }

      .video-text-content-pc-{{section.id}} {
          justify-content: center;
          align-items: center;
      }

      .video-text-buttons-pc-{{section.id}} {
          margin-top: 40px;
          gap: 16px;
          justify-content: center;
      }

      .video-text-features-pc-{{section.id}} {
          margin-top: 50px;
          gap: 16px;
          justify-content: center;
      }

      .video-text-feature-icon-pc-{{section.id}} {
          max-width: 36px;
      }

      .video-text-feature-heading-pc-{{section.id}} {
          margin-top: 14px;
          text-align: center;
          max-width: 100px;
      }

      .video-text-feature-heading-pc-{{section.id}} * {
          font-size: {{feat_text_size}}px;
      }

  }


  .section-pc-{{section.id}}-settings {
      max-width: 1600px;
  }


  .video-text-feature-heading-pc-{{section.id}} * {
      font-weight: {{feat_text_weight}};
      font-style: normal;
  }


  .video-text-video-pc-{{section.id}} {
      order: 1;
  }

  .video-text-content-pc-{{section.id}} {
      order: 2;
  }


  @media(min-width: 1024px) {

      .video-text-video-pc-{{section.id}} {
          order: 2;
      }

      .video-text-content-pc-{{section.id}} {
          order: 1;
      }
  }


  .video-text-video-pc-{{section.id}} {
      aspect-ratio: 12/9;
  }


  @media(min-width: 1024px) {
      .video-text-video-pc-{{section.id}} {
          aspect-ratio: 12/9;
      }
  }


  .video-text-heading-heading_gDFJJb {
      text-align: center;
      margin-top: 0px;
  }

  .video-text-heading-heading_gDFJJb * {
      margin: 0;
      font-size: {{ heading_size_mobile }}px;
      color: {{ heading_color }};
      line-height: 130%;
      text-transform: unset;
  }

  @media(min-width: 1024px) {

      .video-text-heading-heading_gDFJJb {
          text-align: center;
          margin-top: 0px;
      }

      .video-text-heading-heading_gDFJJb * {
          font-size: {{ heading_size }}px;
      }
  }


  .video-text-heading-heading_gDFJJb * {
      font-weight: {{ heading_weight }};
      font-style: normal;
  }


  .video-text-text-text_Gc9ADk {
      text-align: center;
      margin-top: 16px;
  }

  .video-text-text-text_Gc9ADk * {
      margin: 0;
      font-size: {{ sub_heading_size_mobile }}px;
      color: {{ sub_heading_color }};
      line-height: 160%;
      text-transform: unset;
  }

  @media(min-width: 1024px) {

      .video-text-text-text_Gc9ADk {
          text-align: center;
          margin-top: 20px;
      }

      .video-text-text-text_Gc9ADk * {
          font-size: {{ sub_heading_size }}px;
      }
  }


  .video-text-text-text_Gc9ADk {
      font-weight: {{ sub_heading_weight }};
      font-style: normal;
  }
</style>

<div class="section-pc-{{section.id}} video-text-pc-{{section.id}}">
  <div class="section-pc-{{section.id}}-settings">
    <div class="video-text-body-pc-{{section.id}}">
      <div class="video-text-content-pc-{{section.id}}">
        <div class="video-text-heading-heading_gDFJJb">
          <h1>{{ heading }}</h1>
        </div>

        <div class="video-text-text-text_Gc9ADk">
          {{ sub_heading }}
        </div>

        <div class="video-text-features-pc-{{section.id}}">
          {% for block in section.blocks %}
            <div class="video-text-feature-item-pc-{{section.id}}">
              <div class="video-text-feature-icon-pc-{{section.id}}">
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | img_url:'master' }}"
                    alt="Image-{{ forloop.index }}"
                  >
                {% else %}
                  <div class="img">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder_svg' }}
                  </div>
                {% endif %}
              </div>

              <div
                class="video-text-feature-heading-pc-{{section.id}}"
              >
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="video-text-video-pc-{{section.id}}">
        {% if video != blank %}
          {{ video | video_tag: loop: true, muted: true, autoplay: true }}
        {% else %}
          <div class="video">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder_svg' }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@19.1.3/dist/lazyload.min.js"></script>

