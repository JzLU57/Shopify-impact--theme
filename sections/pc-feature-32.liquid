<style data-shopify="">
    .section-pc-{{ section.id }} {
     margin-top: {{ layout_margin_top }}px;
      margin-bottom: {{ layout_margin_bottom }}px;
      margin-left: 0rem;
      margin-right: 0rem;
      border-radius: 0px;
      overflow: hidden;
    }

    .section-pc-{{ section.id }}-settings {
      margin: 0 auto;
      {% comment %} padding-top: 27px;
      padding-bottom: 27px; {% endcomment %}
      {% if layout_enable_full_width == false %}
      padding-left: 1.5rem;
      padding-right: 1.5rem;
      {% else %}
          padding: 0;
      {% endif %}
    }

    .feature-body-pc-{{ section.id }} {
      display: grid;
      grid-template-columns: 1fr;
      gap: 32px;
      background-color: {{ content_background }};
      padding: 16px 16px;
      border: {{ layout_border_size }}px {{ layout_border_style }} {{ layout_border_color }};
      border-radius: {{ layout_border_radius }}px;
    }

    .feature-body-pc-{{ section.id }}.active {
      background-color: {{ content_background_active }};
    }

    .feature-toggle-pc-{{ section.id }} {
      position: relative;
      display: flex;
      gap: 10px;
      max-width: fit-content;
      align-items: center;
      background-color: {{ icon_background }};
      border: {{ icon_border_width }}px {{ icon_border_style }} {{ icon_border_color }};
      border-radius: 100px;
      cursor: pointer;
      padding: 5px;
    }

    .feature-circle-pc-{{ section.id }} {
      display: block !important;
      position: absolute;
      width: 56px;
      height: 56px;
      border-radius: 50%;
      background-color: {{ circle_color }};
      left: 5px;
      z-index: 2;
      transition: all 0.25s ease 0s;
    }

    .feature-body-pc-{{ section.id }}.active
      .feature-circle-pc-{{ section.id }} {
      left: calc(50% + 5px);
      transition: all 0.25s ease 0s;
    }

    .feature-toggle-pc-{{ section.id }} svg,
    .feature-toggle-pc-{{ section.id }} img {
      width: 56px;
      height: 56px;
      transition: all 0.5s ease 0s;
      border-radius: 50%;
      padding: 5px;
    }

    .feature-body-pc-{{ section.id }}.active
      .feature-toggle-pc-{{ section.id }}
      svg:nth-child(3)
      .feature-body-pc-{{ section.id }}.active
      .feature-toggle-pc-{{ section.id }}
      img:nth-child(3) {
      transform: scale(0.8);
    }

    .feature-body-pc-{{ section.id }}.active
      .feature-toggle-pc-{{ section.id }}
      svg:nth-child(2)
      .feature-body-pc-{{ section.id }}.active
      .feature-toggle-pc-{{ section.id }}
      img:nth-child(2) {
      transform: scale(1);
    }

    .feature-body-pc-{{ section.id }}
      .feature-toggle-pc-{{ section.id }}
      svg:nth-child(2)
      .feature-body-pc-{{ section.id }}
      .feature-toggle-pc-{{ section.id }}
      img:nth-child(2) {
      transform: scale(0.8);
    }

    .feature-body-pc-{{ section.id }}
      .feature-toggle-pc-{{ section.id }}
      svg:nth-child(3),
    .feature-body-pc-{{ section.id }}
      .feature-toggle-pc-{{ section.id }}
      img:nth-child(3) {
      transform: scale(1);
    }

    .feature-content-pc-{{ section.id }} {
      grid-area: content;
      display: flex;
      flex-direction: column;
      align-items: start;
    }

    .feature-body-pc-{{ section.id }}.active
      .feature-heading-pc-{{ section.id }}
      * {
      color: #ffffff;
    }

    .feature-body-pc-{{ section.id }}.active
      .feature-text-pc-{{ section.id }}
      * {
      color: #ffffff;
    }

    .feature-body-pc-{{ section.id }}
      .feature-second-heading-pc-{{ section.id }},
    .feature-body-pc-{{ section.id }}
      .feature-second-text-pc-{{ section.id }} {
      display: none;
    }

    .feature-body-pc-{{ section.id }}.active
      .feature-first-heading-pc-{{ section.id }},
    .feature-body-pc-{{ section.id }}.active
      .feature-first-text-pc-{{ section.id }} {
      display: none;
    }

    .feature-body-pc-{{ section.id }}.active
      .feature-second-heading-pc-{{ section.id }},
    .feature-body-pc-{{ section.id }}.active
      .feature-second-text-pc-{{ section.id }} {
      display: block;
    }

    .feature-heading-pc-{{ section.id }} {
      text-align: left;
      margin-top: 32px;
    }

    .feature-heading-pc-{{ section.id }} * {
      margin: 0px;
      font-size: {{ heading_size_mobile }}px;
      line-height: 130%;
      color: {{ heading_color }};
      font-weight: {{ heading_weight }};
      text-transform: unset;
      word-break: break-word;
    }

    .feature-text-pc-{{ section.id }} {
      text-align: left;
      margin-top: 16px;
    }

    .feature-text-pc-{{ section.id }} * {
      margin: 0px;
      font-size: {{ text_size_mobile }}px;
      line-height: 160%;
      color: {{ text_color }};
      text-transform: unset;
      word-break: break-word;
    }

