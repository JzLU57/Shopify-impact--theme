      border: {{image_border_size}}px {{ image_border_style }} {{ image_border_color }} ;
      border-radius: {{ image_border_radius }}px;
      overflow: hidden;
      aspect-ratio: 1/1;
      grid-area: image;
    }

    .feature-image-pc-{{ section.id }} img,
    .feature-image-pc-{{ section.id }} svg {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

